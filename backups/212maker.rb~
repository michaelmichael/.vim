class Book
  @@books = {}
  attr_reader :title, :weekly_sales

  def initialize(title, sales=0)
    @title = title
    @weekly_sales = sales
  end

  def add_sales(sales)
    @weekly_sales += sales
  end
end

x = Book.new("hello")
y = Book.new("happy")
puts x.title
puts x.weekly_sales
x.add_sales(3)
puts y.title

